@page
@model PRN_Project.Pages.Admin.Categories.UpsertModel

<form method="post">
    <input asp-for="Category.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">
                    @(Model.Category.Id != 0 ? "Update" : "Create") category
                </h2> <hr />

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Category.Name"></label>
                    <input asp-for="Category.Name" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Category.DisplayOrder"></label>
                    <input asp-for="Category.DisplayOrder" class="form-control" />

                </div>
        </div>

        @if (Model.Category.Id != 0)
        {
            <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        }
        else {
            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>              
        }

        <a asp-page="Index" class="btn btn-secondary" style="width:150px">
            <i class="bi bi-caret-left-square-fill"> Back to list</i>
        </a>

    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
