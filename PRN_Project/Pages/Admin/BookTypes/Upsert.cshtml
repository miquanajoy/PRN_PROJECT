@page
@model PRN_Project.Pages.Admin.BookTypes.EditModel

<form method="post">
    <input hidden asp-for="BookType.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit book type</h2> <hr />

        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="BookType.Name"></label>
            <input asp-for="BookType.Name" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px">
            <i class="bi bi-caret-left-square-fill"> Back to list</i>
            </a>

    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
